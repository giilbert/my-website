{
  "hosting": {
    "public": "public",

    "cleanUrls": true,
    "trailingSlash": false,

    "rewrites": [
        {
            "source": "**",
            "destination": "/index.html"
        }
    ],

    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
